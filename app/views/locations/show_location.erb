<h1>Your list of activities at this location</h1>
<% Activity.all.each do |activity| %>
 <% if activity.location != nil %>
   <% if activity.location.name == @location.name %>
     <a href="/activities/<%=activity.id%>"><%= activity.name %></a><br>
   <% end %>
 <% end %>
<% end %>
<br><br>
<a href="/activities/new"><input type="submit" value="Add a new activity"></a>
<br><br>
<a href="/locations/<%=@location.id%>/edit"><input type="submit" value="Edit Location"></a><br><br>

<form method="post" action="/locations/<%=@location.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" id="Delete Location" value="Delete Location"><br>
</form>

